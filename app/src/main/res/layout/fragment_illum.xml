<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:clickable="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="#00ffffff"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/coloreslayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.94"
            android:clickable="true"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/TextViewBGcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Background Color"
                android:textColor="#ffffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="R"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:max="255"
                    android:paddingTop="5dp"
                    android:progress="64"
                    android:progressDrawable="@drawable/styled_progress"
                    android:thumb="@drawable/thumb3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="G"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:max="255"
                    android:paddingTop="5dp"
                    android:progress="64"
                    android:progressDrawable="@drawable/styled_progress"
                    android:thumb="@drawable/thumb3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="B"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />

                <SeekBar
                    android:id="@+id/blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:max="255"
                    android:paddingTop="5dp"
                    android:progress="64"
                    android:progressDrawable="@drawable/styled_progress"
                    android:thumb="@drawable/thumb3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:id="@+id/iluminationlayout"
            android:paddingRight="10dp"
            android:gravity="bottom"
            android:layout_weight="0.06">

            <TextView
                android:id="@+id/textViewIlum"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Illumination"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ilum1"
                android:progress="50"
                android:max="100"
                android:paddingTop="5dp"
                android:clickable="true"
                android:progressDrawable="@drawable/styled_progress"
                android:thumb="@drawable/thumb3"
                android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ilum2"
                android:progress="60"
                android:max="100"
                android:paddingTop="5dp"
                android:clickable="true"
                android:progressDrawable="@drawable/styled_progress"
                android:thumb="@drawable/thumb3"
                android:layout_centerVertical="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ilum3"
                android:progress="100"
                android:max="100"
                android:paddingTop="5dp"
                android:clickable="true"
                android:progressDrawable="@drawable/styled_progress"
                android:thumb="@drawable/thumb3"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:id="@+id/linearLayout"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:gravity="bottom">
            <TextView
                android:id="@+id/textViewReflectance"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Reflectance K"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ilum4"
                android:progress="100"
                android:max="100"
                android:paddingTop="5dp"
                android:clickable="true"
                android:progressDrawable="@drawable/styled_progress"
                android:thumb="@drawable/thumb3"
                android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ilum5"
                android:progress="80"
                android:max="100"
                android:paddingTop="5dp"
                android:clickable="true"
                android:progressDrawable="@drawable/styled_progress"
                android:thumb="@drawable/thumb3"
                android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ilum6"
                android:progress="80"
                android:max="100"
                android:paddingTop="5dp"
                android:clickable="true"
                android:progressDrawable="@drawable/styled_progress"
                android:thumb="@drawable/thumb3"
                android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sh"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ilum7"
                android:progress="100"
                android:max="100"
                android:paddingTop="5dp"
                android:clickable="true"
                android:progressDrawable="@drawable/styled_progress"
                android:thumb="@drawable/thumb3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-10dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:id="@+id/mesh_colorlayout"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/textViewcolormesh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Color Mesh"
                android:textColor="#ffffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/red_mesh"
                    android:progress="125"
                    android:max="255"
                    android:paddingTop="5dp"
                    android:clickable="true"
                    android:progressDrawable="@drawable/styled_progress"
                    android:thumb="@drawable/thumb3"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/green_mesh"
                    android:progress="125"
                    android:max="255"
                    android:paddingTop="5dp"
                    android:clickable="true"
                    android:progressDrawable="@drawable/styled_progress"
                    android:thumb="@drawable/thumb3"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/blue_mesh"
                    android:progress="125"
                    android:max="255"
                    android:paddingTop="5dp"
                    android:clickable="true"
                    android:progressDrawable="@drawable/styled_progress"
                    android:thumb="@drawable/thumb3"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="15sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"/>
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alpha"
                    android:progress="100"
                    android:max="100"
                    android:paddingTop="5dp"
                    android:clickable="true"
                    android:progressDrawable="@drawable/styled_progress"
                    android:thumb="@drawable/thumb3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

